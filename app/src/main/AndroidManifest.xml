<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.adit.bangkit.plagroid">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Plagroid"
        tools:ignore="AllowBackup">
        <activity
            android:name=".ui.activity.seller.product.AddProductActivity"
            android:exported="false" />
        <activity
            android:name=".ui.activity.seller.LoginSellerActivity"
            android:exported="false" />
        <activity
            android:name=".ui.activity.seller.RegisterSellerActivity"
            android:exported="false" />
        <activity
            android:name=".ui.activity.seller.UpdateSellerProfileActivity"
            android:exported="false" />
        <activity
            android:name=".ui.activity.seller.SellerProfileActivity"
            android:exported="false" />
        <activity
            android:name=".ui.admin.AdminActivity"
            android:exported="false" />
        <activity
            android:name=".ui.activity.user.WishlistActivity"
            android:theme="@style/Theme.Plagroid" />
        <activity
            android:name=".ui.activity.user.SettingsActivity"
            android:theme="@style/Theme.Plagroid" />
        <activity
            android:name=".ui.activity.user.DashboardActivity"
            android:theme="@style/Theme.Plagroid" />
        <activity
            android:name=".ui.activity.user.UserProfileActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Plagroid.NoActionBar"
            tools:ignore="LockedOrientationActivity" />
        <activity
            android:name=".ui.activity.user.ForgotPasswordActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Plagroid.NoActionBar"
            tools:ignore="LockedOrientationActivity" />
        <activity android:name=".ui.activity.BaseActivity" />
        <activity
            android:name=".ui.activity.user.RegisterActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Plagroid.NoActionBar"
            tools:ignore="LockedOrientationActivity" />
        <activity
            android:name=".ui.activity.user.LoginActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Plagroid.NoActionBar"
            tools:ignore="LockedOrientationActivity" />
        <activity
            android:name=".ui.activity.seller.SellerActivity"
            android:theme="@style/Theme.Plagroid" />
        <activity
            android:name=".ui.activity.SplashActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Plagroid"
            tools:ignore="LockedOrientationActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

</manifest>